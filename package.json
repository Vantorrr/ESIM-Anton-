{
  "name": "esim-service",
  "version": "1.0.0",
  "description": "Программный комплекс для продажи eSIM",
  "private": true,
  "workspaces": [
    "backend",
    "admin",
    "bot",
    "client",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter admin dev\" \"pnpm --filter bot dev\"",
    "build": "cd client && npm install --legacy-peer-deps && npm run build",
    "start": "cd client && npm start",
    "start:all": "concurrently \"pnpm --filter backend start\" \"pnpm --filter admin start\" \"pnpm --filter bot start\"",
    "lint": "pnpm --parallel lint",
    "test": "pnpm --parallel test",
    "db:migrate": "pnpm --filter backend prisma migrate dev",
    "db:studio": "pnpm --filter backend prisma studio"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.1.0"
}
