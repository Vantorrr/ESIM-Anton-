generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  telegramId     BigInt         @unique
  username       String?
  firstName      String?
  lastName       String?
  phone          String?
  email          String?
  balance        Decimal        @default(0) @db.Decimal(10, 2)
  bonusBalance   Decimal        @default(0) @db.Decimal(10, 2)
  referralCode   String         @unique @default(cuid())
  referredById   String?
  loyaltyLevelId String?
  totalSpent     Decimal        @default(0) @db.Decimal(10, 2)
  isBlocked      Boolean        @default(false)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  utmCampaign    String?
  utmMedium      String?
  utmSource      String?
  notifications  Notification[]
  orders         Order[]
  transactions   Transaction[]
  loyaltyLevel   LoyaltyLevel?  @relation(fields: [loyaltyLevelId], references: [id])
  referredBy     User?          @relation("Referrals", fields: [referredById], references: [id])
  referrals      User[]         @relation("Referrals")

  @@index([telegramId])
  @@index([referralCode])
  @@map("users")
}

model LoyaltyLevel {
  id              String   @id @default(cuid())
  name            String   @unique
  minSpent        Decimal  @db.Decimal(10, 2)
  cashbackPercent Decimal  @db.Decimal(5, 2)
  discount        Decimal  @default(0) @db.Decimal(5, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  users           User[]

  @@map("loyalty_levels")
}

model EsimProduct {
  id            String   @id @default(cuid())
  country       String
  region        String?
  name          String
  description   String?
  dataAmount    String
  validityDays  Int      // Для Daily Unlimited = срок действия (180 дней), для обычных = duration
  duration      Int?     // Для Daily Unlimited = 1 (в день), для обычных = validityDays
  speed         String?  // Ограничение скорости после лимита (384 Kbps, 1 Mbps и т.д.)
  providerPrice Decimal  @db.Decimal(10, 2)
  ourPrice      Decimal  @db.Decimal(10, 2)
  providerId    String
  providerName  String   @default("main")
  isActive      Boolean  @default(true)
  stock         Int      @default(999)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isUnlimited   Boolean  @default(false)
  badge         String?
  badgeColor    String?
  orders        Order[]

  @@index([country])
  @@index([isActive])
  @@map("esim_products")
}

model Order {
  id               String        @id @default(cuid())
  userId           String
  productId        String
  status           OrderStatus   @default(PENDING)
  quantity         Int           @default(1)
  productPrice     Decimal       @db.Decimal(10, 2)
  discount         Decimal       @default(0) @db.Decimal(10, 2)
  bonusUsed        Decimal       @default(0) @db.Decimal(10, 2)
  totalAmount      Decimal       @db.Decimal(10, 2)
  qrCode           String?
  iccid            String?
  activationCode   String?
  providerOrderId  String?
  providerResponse Json?
  errorMessage     String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  completedAt      DateTime?
  product          EsimProduct   @relation(fields: [productId], references: [id])
  user             User          @relation(fields: [userId], references: [id])
  transactions     Transaction[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("orders")
}

model Transaction {
  id              String            @id @default(cuid())
  userId          String
  orderId         String?
  type            TransactionType
  status          TransactionStatus @default(PENDING)
  amount          Decimal           @db.Decimal(10, 2)
  paymentProvider String?
  paymentId       String?
  paymentMethod   String?
  metadata        Json?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  order           Order?            @relation(fields: [orderId], references: [id])
  user            User              @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([orderId])
  @@index([paymentId])
  @@index([status])
  @@map("transactions")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  isRead    Boolean          @default(false)
  metadata  Json?
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([isRead])
  @@map("notifications")
}

model SystemSettings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  updatedAt   DateTime @updatedAt

  @@map("system_settings")
}

model Admin {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String
  firstName   String?
  lastName    String?
  role        AdminRole @default(SUPPORT)
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("admins")
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum TransactionType {
  PAYMENT
  REFUND
  BONUS_ACCRUAL
  BONUS_SPENT
  REFERRAL_BONUS
}

enum TransactionStatus {
  PENDING
  SUCCEEDED
  FAILED
  CANCELLED
}

enum NotificationType {
  ORDER_CREATED
  ORDER_COMPLETED
  ORDER_FAILED
  BONUS_RECEIVED
  REFERRAL_REGISTERED
  LEVEL_UP
}

enum AdminRole {
  SUPER_ADMIN
  MANAGER
  SUPPORT
}
